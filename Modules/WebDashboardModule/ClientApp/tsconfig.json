{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "module": "esnext",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2018",
        "typeRoots": ["node_modules/@types"],
        "types": ["node", "jest"],
        "lib": ["es2018", "es2015", "es2016", "dom", "es5", "es6"]
    },
    "angularCompilerOptions": {
        "strictTemplates": true
    },
    "exclude": ["node_modules"]
}
